{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@lexhub/types/*": ["packages/types/src/*"],
      "@lexhub/api-client/*": ["packages/api-client/src/*"],
      "@lexhub/ui/*": ["packages/ui/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}


