{
  "name": "lexhub",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "server"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "echo \"Add ESLint later\"",
    "start:web": "pnpm --filter lexhub-web dev",
    "start:server": "pnpm --filter lexhub-server dev",
    "test:server": "pnpm --filter lexhub-server test",
    "test:server:docker": "bash ./scripts/test-server.sh",
    "test:server:docker:win": "powershell -ExecutionPolicy Bypass -File ./scripts/test-server.ps1",
    "test:server:watch:win": "powershell -ExecutionPolicy Bypass -File ./scripts/dev-test-server.ps1"
  },
  "devDependencies": {
    "turbo": "^2.1.1",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.0.0"
}


